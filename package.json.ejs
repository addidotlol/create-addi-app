{
	"name": "<%= appName %>",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"cf:deploy": "pnpm run build && wrangler deploy",
		"cf:gen": "wrangler types ./src/worker-configuration.d.ts"<% if (database) { %>,
		"db:gen": "<% if (auth) { %>pnpm run auth:gen && <% } %>drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply D1 --local",
		"db:migrate:preview": "wrangler d1 migrations apply D1 --preview",
		"db:migrate:remote": "wrangler d1 migrations apply D1 --remote"<% } %><% if (auth) { %>,
		"auth:gen": "pnpm dlx @better-auth/cli generate --config ./src/lib/server/auth.ts --output ./src/lib/server/db/schema/auth.ts"<% } %>
	},
