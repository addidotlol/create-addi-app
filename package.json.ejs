		"@tailwindcss/vite": "^4.1.13",
		"@types/node": "^22",
		"bits-ui": "^2.14.1",
		"clsx": "^2.1.1"<% if (database) { %>,
		"drizzle-kit": "^0.31.5"<% } %>,
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.39.5",
