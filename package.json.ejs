		"typescript-eslint": "^8.44.1",
		"typescript-svelte-plugin": "^0.3.50",
		"vite": "^7.1.7",
		"wrangler": "^4.45.0"
	},
	"dependencies": {<% if (database) { %>
		"drizzle-orm": "^0.44.7"<% } %><% if (auth) { %><% if (database) { %>,<% } %>
		"better-auth": "^1.3.31"<% } %><% if (useful) { %><% if (database || auth) { %>,<% } %>
		"runed": "^0.35.1",
